---
const images = [
  "/foto1.JPG",
  "/foto2.jpeg",
  "/foto3.JPG",
  "/foto4.jpeg",
  "/foto5.JPG",
];
---

<div class="gallery">
  {images.map((src, index) => (
    <div class="image-container">
      <img src={src} class="gallery-img" alt={`Imagen ${index + 1}`} />
    </div>
  ))}
</div>

<style>
.gallery {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 600px;
  overflow: hidden;
}
.image-container {
  position: relative;
  width: 20%;
  height: 100%;
  overflow: hidden;
  transition: all 1.2s ease-in-out;
}

.gallery-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 1.2s ease, filter 1.2s ease;
}

.gallery:hover .image-container {
  filter: blur(8px) brightness(0.6);
}

.gallery .image-container:hover {
  width: 30%;
  filter: blur(0);
}

/* Media query para celulares con ancho de 360px */
@media (max-width: 360px) {
  .gallery {
    height: 400px;
  }
}

/* Media query para pantallas medianas */
@media (min-width: 768px) {
  .gallery {
    height: 460px;
  }
}

/* Media query para pantallas grandes */
@media (min-width: 1024px) {
  .gallery {
    height: 530px;
  }
}
</style>
