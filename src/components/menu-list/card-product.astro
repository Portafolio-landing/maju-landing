
---
const { image, title, description, price } = Astro.props;
---

<head>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Waterfall&display=swap" rel="stylesheet">
</head>

<div class="card">
  <img src={image} alt={title} class="card-img"/>
  <div class="card-content">
    <div class="title-price">
      <h3 class="title">{title}</h3>
      <p class="price">${price}</p>
    </div>
    <p class="description">{description}</p>
  </div>
</div>


<style>
.card {
  width: 409px;
  height: 445px;
  background: #FFF;
  border-radius: 20px;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 0;
  transition: all 0.3s ease-in-out;
}

.title-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 0;
  margin: 0; /* ðŸ”¹ Elimina cualquier margen extra */
  padding: 0; /* ðŸ”¹ Asegura que no haya espacio interno */
}



.card-img {
  width: 100%;
  height: 250px;
  object-fit: cover;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  border-bottom-left-radius: 0px;
  border-bottom-right-radius: 0px;
  
}

.card-content {
  padding: 2rem;
  text-align: left;
  width: 80%;
}

.title {
  font-family: 'Waterfall', cursive;
  color: #000;
  font-size: 48px;
  font-style: normal;
  font-weight: bold;
  line-height: normal;
  margin: 0.4rem 0;

}

.description {
  font-family: 'Montserrat', sans-serif;
  color: #000;
  font-size: 20px;
  font-style: normal;
  font-weight: 400;
  line-height: 1.3;
  height: 2.7em; /* Aproximadamente 2 lÃ­neas de texto */
  display: -webkit-box;
  -webkit-line-clamp: 2; /* Limita a 2 lÃ­neas */
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
}



.price {
  font-size: 1.2rem;
  font-weight: normal;
  margin-top: 0.5rem;
  font-family: 'Montserrat', sans-serif;
  margin: 0;
}

.card:hover {
  transform: scale(1.03); /* ðŸ”¹ Aumenta el tamaÃ±o ligeramente */
  box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.2); /* ðŸ”¹ Agrega una sombra mÃ¡s fuerte */
}
</style>
