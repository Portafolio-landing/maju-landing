---
import CardProduct from './card-product.astro';
import products from '../../data/products.json';

interface Product {
  image: string;
  title: string;
  description: string;
  price: number;
  price_whole: number | null;
  category: string;
}
---

<div class="list-products">
  {products.map((product: Product) => (
    <CardProduct 
      image={product.image} 
      title={product.title} 
      description={product.description} 
      price={product.price} 
      price_whole={product.price_whole}
    />
  ))}
</div>

<style>
.list-products {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(420px, 1fr)); /* Se ajustan fluidamente */
  gap: 20px; 
  max-width: 1700px;
  margin: 0 auto;
  justify-content: center; /* Centra las tarjetas */
  align-items: stretch; 
  padding: 10px;
  margin-bottom: 30px;
}

.card {
  width: 100%;
  max-width: 450px; 
  background: #FFF;
  border-radius: 20px;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  text-align: left;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0;
  transition: all 0.3s ease-in-out;
  min-height: 500px; 
}


.card-img {
  width: 100%;
  height: auto; 
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
}

.card-content {
  padding: 1.2rem;
  text-align: left;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  flex-grow: 1;
}

/* Texto ajustado */
.title-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-family: 'Waterfall', cursive;
  min-height: 60px;
  margin-bottom: 0.5rem;
}

.title {
  font-size: 36px;
  color: #5e3023;
  margin: 0;
  font-weight: bold;
  flex-grow: 1;
  display: flex;
  align-items: center;
}

.price {
  font-size: 22px;
  font-family: 'Montserrat', sans-serif;
  font-weight: 600;
  color: #5e3023;
  margin: 0;
}

.description {
  font-family: 'Montserrat', sans-serif;
  color: #000;
  font-size: 16px;
  font-weight: 400;
  line-height: 1.5;
  text-align: left;
  margin-top: 0;
  flex-grow: 1;
  display: block;
  word-wrap: break-word;
  overflow: hidden;
}


.card:hover {
  transform: scale(1.03);
  box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.2);
}

/* âœ… Responsive */
@media (max-width: 1024px) {
  .list-products {
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); 
  }

  .card {
    min-height: 450px;
  }

  .title {
    font-size: 32px;
  }

  .price {
    font-size: 20px;
  }

  .description {
    font-size: 14px;
  }
}

@media (max-width: 768px) {
  .list-products {
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); 
  }

  .card {
    min-height: 420px;
  }

  .card-img {
    height: auto; 
  }

  .title {
    font-size: 28px;
  }

  .price {
    font-size: 18px;
  }

  .description {
    font-size: 14px;
  }
}

/* Media query para celulares con ancho de 360px */
@media (min-width: 360px) and (max-width: 411px) {
  .list-products {
    margin-left: 20px;
    margin-right: 20px;
    margin-bottom: 30px;
  }
}

@media (min-width: 412px) and (max-width: 767px) {
  .list-products {
    margin-left: 45px;
    margin-right: 20px;
    margin-bottom: 30px;
  }
}

/* Media query para pantallas medianas */
@media (min-width: 768px) and (max-width: 1023px) {
  .list-products {
    margin-left: 50px;
    margin-right: 25px;
    margin-bottom: 30px;
  }
}

/* Media query para pantallas grandes */
@media (min-width: 1024px) and (max-width: 1479px) {
  .list-products {
    margin-left: 37px;
    margin-right: 33px;
    margin-bottom: 30px;
  }
}

</style>
