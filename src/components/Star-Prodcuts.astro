---
import CarouselProductos from "./Carousel-Productos/CarouselProductos.jsx"
---

<section class="star-products">
  <h2 class="title">Distruta de nuestros productos destacados</h2>
  <div class="carousel-wrapper">
    <CarouselProductos client:only="react" />
  </div>
</section>

<style>
.star-products {
  text-align: center;
  padding: 0.5rem 1rem; /* 🔹 Reducir padding superior */
  max-width: 100%;
  overflow: hidden;
}

.title {
  margin: 0px auto; /* 🔹 Reducir margen superior */
  font-weight: bold;
  font-size: 100px;
  color: #5e3023;
  word-wrap: break-word;
  font-family: 'Waterfall', cursive;
  text-align: center;
  display: block;
  width: 100%;
}

/* RESPONSIVE DESIGN */
@media (max-width: 1024px) {
  .title {
    font-size: 60px;
    margin: 5px auto; /* 🔹 Ajustar margen en tablets */
  }
}

@media (max-width: 768px) {
  .title {
    font-size: 50px;
    margin: 5px auto; /* 🔹 Menos espacio arriba en móviles */
  }

  .star-products {
    padding: 0.5rem; /* 🔹 Ajustar padding en móviles */
  }
}

@media (max-width: 480px) {
  .title {
    font-size: 40px;
    margin: 3px auto; /* 🔹 Compactar en móviles pequeños */
  }

  .star-products {
    padding: 0.3rem; /* 🔹 Reducir padding en móviles */
  }
}

</style>
