---
import CarouselProductos from "./Carousel-Productos/CarouselProductos.jsx"
---

<section class="star-products">
  <h2 class="title">Productos Destacados...</h2>
  <div class="carousel-wrapper">
    <CarouselProductos client:only="react" />
  </div>
</section>

<style>
.star-products {
  text-align: center;
  padding: 2rem 1rem;
  max-width: 100%;
  overflow: hidden; /* Evita desbordamientos */
}

.title {
  margin: 16px 0;
  font-weight: bold;
  font-size: 80px;
  color: #895737;
  word-wrap: break-word;
  font-family: 'Waterfall', cursive;
}

/* RESPONSIVE DESIGN */
@media (max-width: 1024px) {
  .title {
    font-size: 60px; /* Reducir tamaño en tablets */
  }
}

@media (max-width: 768px) {
  .title {
    font-size: 50px; /* Ajustar tamaño en móviles medianos */
  }

  .star-products {
    padding: 1rem; /* Reducir padding para dar más espacio */
  }

  /* Apilar imagen y texto en móviles */
  .carousel-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .carousel-wrapper .image-container, 
  .carousel-wrapper .text-container {
    width: 100%; /* Ocupar todo el ancho disponible */
    max-width: 90%; /* Mantener márgenes */
  }

  .text-container {
    margin-top: 15px; /* Espacio entre la imagen y el texto */
  }
}

@media (max-width: 480px) {
  .title {
    font-size: 40px; /* Compactar en móviles pequeños */
    text-align: center;
  }

  .star-products {
    padding: 0.5rem; /* Reducir más el padding en móviles */
  }
}

</style>
