---
import { useState } from "react";
import foto1 from "../assets/foto1.jpg";
import foto2 from "../assets/foto2.jpeg";
import foto3 from "../assets/foto3.jpg";
import foto4 from "../assets/foto4.jpeg";
import foto5 from "../assets/foto5.jpg";

const imagenes = [foto1, foto2, foto3, foto4, foto5];
const [imagenActiva, setImagenActiva] = useState(null);
---

<style>
  .imagenes-contenedor {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    gap: 0;
  }

  .imagenes-contenedor img {
    width: 20%;
    object-fit: cover;
    cursor: pointer;
    transition: transform 0.3s ease-in-out;
  }

  .imagenes-contenedor img:hover {
    transform: scale(1.05);
  }

  .overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(10px);
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease-in-out;
  }

  .overlay.activo {
    opacity: 1;
    visibility: visible;
  }

  .imagen-expandida {
    max-width: 80%;
    max-height: 80%;
    border-radius: 10px;
    box-shadow: 0px 0px 20px rgba(255, 255, 255, 0.5);
  }
</style>

<section class="imagenes-contenedor">
  {imagenes.map((img, index) => (
    <img key={index} src={img.src} alt={`Imagen ${index + 1}`} onClick={() => setImagenActiva(img.src)} />
  ))}
</section>

{imagenActiva && (
  <div class="overlay activo" onClick={() => setImagenActiva(null)}>
    <img class="imagen-expandida" src={imagenActiva} alt="Imagen expandida" />
  </div>
)}
