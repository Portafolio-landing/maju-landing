---
// Componente flotante de WhatsApp
const phoneNumber = "51995439092";
const message = encodeURIComponent("Hola, quiero información sobre la carta.");
const mobileLink = `https://wa.me/${phoneNumber}?text=${message}`;
const desktopLink = `https://web.whatsapp.com/send?phone=${phoneNumber}&text=${message}`;
---

<a href={mobileLink} target="_blank" class="whatsapp-button mobile-link">
  <img src="/whatsapp.svg" alt="WhatsApp Móvil" />
</a>

<a href={desktopLink} target="_blank" class="whatsapp-button desktop-link">
  <img src="/whatsapp.svg" alt="WhatsApp Web" />
</a>

<style>
    .whatsapp-button {
    position: fixed;
    bottom: 30px; 
    right: 50px;  
    width: 60px;
    height: 60px;
    background-color: #25D366;
    border-radius: 50%;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    transition: transform 0.3s ease-in-out;
  }

  .whatsapp-button:hover {
    transform: scale(1.1);
  }

  .whatsapp-button img {
    width: 35px;
    height: 35px;
  }

  .mobile-link {
    display: none;
  }

  @media (max-width: 1024px) {
    .whatsapp-button {
      right: 30px; 
    }
  }

  @media (max-width: 768px) {
    .whatsapp-button {
      right: 20px; 
      bottom: 20px;
    }

    .mobile-link {
      display: flex;
    }

    .desktop-link {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .whatsapp-button {
      right: 15px; 
      bottom: 15px;
      width: 50px;
      height: 50px;
    }

    .whatsapp-button img {
      width: 30px;
      height: 30px;
    }
  }

</style>
