---
import BaseLayout from "../layouts/BaseLayout.astro";
const logo = "/logo.png";

const title = "Página No Encontrada | Maju";
const lang = "es";
---

<BaseLayout lang={lang} title={title}>
        <div class="error-container">
            <img src={logo} alt="Logo de la empresa" class="logo" />
            <h1>¡Oops! Página no encontrada</h1>
            <p>Lo sentimos, la página que buscas no existe.</p>
            <a href="/" class="back-button">Volver al inicio</a>
          </div>
</BaseLayout>

<style>
    body {
        background: #FDF6F0;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
        font-family: "Montserrat", sans-serif;
        text-align: center;
    }

    .error-container {
        background: white;
        margin-top: 100px;
        margin-bottom: 100px;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        max-width: 500px;
        text-align: center;
    }

    .logo {
        width: 120px;
        margin-bottom: 10px;
    }

    h1 {
        font-size: 28px;
        color: #895737;
        margin-bottom: 10px;
    }

    p {
        font-size: 18px;
        color: #5e3023;
        margin-bottom: 20px;
    }

    .back-button {
        display: inline-block;
        background: #895737;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        transition: background 0.3s;
    }

    .back-button:hover {
        background: #5e3023;
    }

    @media (min-width: 768px) and (max-width: 1479px) {
        .error-container {
            margin-top: 100px;
            margin-bottom: 25px;
            padding: 40px;
        }

        .logo {
            width: 90px;
        }

        h1 {
            font-size: 20px;
        }

        p {
            font-size: 16px;
        }
    }

    @media (min-width: 768px) and (max-width: 1023px) {
        .error-container {
            margin-top: 50px;
            margin-bottom: 30px;
            padding: 40px;
        }
    }

    @media (min-width: 360px) and (max-width: 767px) {
        .error-container {
            margin-top: 100px;
            margin-bottom: 35px;
            padding: 10px 5px;
            width: 90%;
            justify-self: center;
        }

        .logo {
            width: 70px;
        }

        h1 {
            font-size: 16px;
        }

        p {
            font-size: 14px;
        }

        .back-button {
            font-size: 14px;
        }
    }
</style>
