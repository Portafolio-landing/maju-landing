---
import BaseLayout from "../layouts/BaseLayout.astro";
import Map from "../components/Map.jsx";

const lang = "es";
const title = "Contáctanos | Maju";
---

<BaseLayout lang={lang} title={title}>
  <main>
    <img src="/prueba.png" alt="Pastelería" class="header-image" />
    <div class="contact-container">
      <h2>¡Estamos aquí para ti!</h2>
      <p>Contáctanos</p>
      <div class="contact-info">
        <div>
          <div class="icon-circle">
            <img src="/oclock.svg" alt="Horario" class="icon" />
          </div>
          <p>
            <strong>Horarios de<br />atención</strong><br /><br />De Lunes a
            Domingo:<br />8:00 am a 10:00 pm
          </p>
        </div>
        <div>
          <div class="icon-circle">
            <img src="/marker-icon.svg" alt="Ubicación" class="icon" />
          </div>
          <p>
            <strong>Úbicanos</strong><br /><br />Av. Las Palmeras N°3864, Los
            Olivos
          </p>
        </div>
        <div>
          <div class="icon-circle">
            <img src="/gentle.svg" alt="Contacto" class="icon" />
          </div>
          <p><strong>Contacto</strong><br /><br />+51 995 439 092</p>
        </div>
      </div>
    </div>
    <Map client:only="react" />
  
    <div class="instagram-section">
      <h3>Síguenos en Instagram</h3>
      <a href="https://www.instagram.com/maju_europostres" target="_blank" class="instagram-box">
        <img src="/instagram-icon.svg" alt="Instagram" class="instagram-icon" />
        <p>@maju_europostres</p>
      </a>
    </div>
  </main>
</BaseLayout>


<style>
  .instagram-section {
    background: url("/instagram background.png") no-repeat center center/cover;
    position: relative;
    width: 100%;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #5e3023;
    font-family: "Waterfall", sans-serif;
    flex-direction: column;
  }

  .instagram-section h3 {
    font-size: 70px;
    font-weight: normal;
    margin-top: 0px;
    margin-bottom: 15px;
  }

  .instagram-box {
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 6px solid #5e3023;
    padding: 10px 20px;
    border-radius: 20px;
    margin-top: 10px;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.4);
    width: 304px;
    position: relative;
    overflow: hidden;
    transition: background 0.5s ease-in-out;
    cursor: pointer;
  }

  .instagram-box::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(217, 217, 217, 0.44);
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
    z-index: 0;
}

.instagram-box:hover::before {
    opacity: 1;
}

  .instagram-icon {
    width: 30px;
    height: 30px;
    margin-right: 10px;
  }

  .instagram-icon,
.instagram-box p {
    position: relative;
    z-index: 1;
}

  .instagram-box p {
    color: #5e3023;
    font-size: 25px;
    font-family: "Montserrat", sans-serif;
    font-weight: bold;
    position: relative;
  }

  h2 {
    color: #895737;
    font-family: "Waterfall", sans-serif;
    font-size: 90px;
    font-weight: normal;
    margin: 0;
  }

  p {
    color: #895737;
    font-family: "Montserrat", sans-serif;
    font-size: 30px;
    font-weight: bold;
  }

  .contact-info p {
    color: #000;
    font-family: "Montserrat", sans-serif;
    font-size: 20px;
    font-weight: normal;
    text-align: center;
    max-width: 220px;
  }

  .header-image {
    width: 100%;
    height: 600px;
    margin-bottom: -5px;
  }

  .contact-container {
    background: #f5e7da;
    padding: 40px 0;
    text-align: center;
  }

  .contact-info {
    margin: 4rem 0 1rem 0;
    display: flex;
    justify-content: center;
    gap: 6rem;
  }

  .contact-info div {
    text-align: center;
    max-width: 220px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .icon-circle {
    min-width: 60px;
    min-height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(137, 87, 55, 1);
    border-radius: 50%;
    box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
  }

  .icon {
    width: 30px;
    height: 30px;
    filter: brightness(0) invert(1);
    transform: scale(1.05);
  }

  .icon-circle:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
  }

  @media (max-width: 950px) {
    .contact-info {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 3rem;
      justify-content: center;
    }

    .contact-info div {
      max-width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .contact-info div:nth-child(3) {
      grid-column: span 2;
      justify-self: center;
    }
  }

  @media (max-width: 768px) {
    .contact-info {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 2rem;
    }
  }
</style>
