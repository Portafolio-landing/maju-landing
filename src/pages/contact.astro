---
import BaseLayout from "../layouts/BaseLayout.astro";
import Map from "../components/Map.jsx";

const lang = "es";
const title = "Contáctanos | Maju";
---

<BaseLayout lang={lang} title={title}>
  <main>
    <img src="/prueba.png" alt="Pastelería" class="header-image" />
    <div class="contact-container">
      <h2>¡Estamos aquí para ti!</h2>
      <p>Contáctanos</p>
      <div class="contact-info">
        <div>
          <div class="icon-circle">
            <img src="/oclock.svg" alt="Horario" class="icon" />
          </div>
          <p>
            <strong>Horarios de<br />atención</strong><br /><br />De Lunes a
            Domingo:<br />8:00 am a 10:00 pm
          </p>
        </div>
        <div>
          <a href="https://www.google.com/maps/place/EUROPOSTRES+MAJU/@-11.9898176,-77.0742235,17z/data=!3m1!4b1!4m6!3m5!1s0x9105ce5ba679629b:0xa934456619a82058!8m2!3d-11.9898176!4d-77.0716432!16s%2Fg%2F11b6vk2k1x?entry=ttu&g_ep=EgoyMDI1MDIxMi4wIKXMDSoASAFQAw%3D%3D" target="_blank" class="location-link">
            <div class="icon-circle">
              <img src="/marker-icon.svg" alt="Ubicación" class="icon" />
            </div>
          </a>
          <p>
            <strong>Úbicanos</strong><br /><br />
            <a href="https://www.google.com/maps/place/EUROPOSTRES+MAJU/@-11.9898176,-77.0742235,17z/data=!3m1!4b1!4m6!3m5!1s0x9105ce5ba679629b:0xa934456619a82058!8m2!3d-11.9898176!4d-77.0716432!16s%2Fg%2F11b6vk2k1x?entry=ttu&g_ep=EgoyMDI1MDIxMi4wIKXMDSoASAFQAw%3D%3D" target="_blank" class="location-text">
              Av. Las Palmeras N°3864, Los Olivos
            </a>
          </p>
          
        </div>
        <div>
          <!-- Ícono con enlace a WhatsApp para móviles -->
          <a href="https://wa.me/51995439092?text=Hola%20quiero%20información%20sobre%20la%20carta"
             target="_blank" class="whatsapp-icon mobile-link">
            <div class="icon-circle">
              <img src="/whatsapp.svg" alt="WhatsApp Móvil" class="icon" />
            </div>
          </a>
        
          <!-- Ícono con enlace a WhatsApp Web para computadoras -->
          <a href="https://web.whatsapp.com/send?phone=51995439092&text=Hola%20quiero%20información%20sobre%20la%20carta"
             target="_blank" class="whatsapp-icon desktop-link">
            <div class="icon-circle">
              <img src="/gentle.svg" alt="WhatsApp Web" class="icon" />
            </div>
          </a>
        
          <p>
            <strong>Contacto</strong><br /><br />
        
            <!-- Enlace para móviles -->
            <a href="https://wa.me/51995439092?text=Hola%20quiero%20información%20sobre%20la%20carta"
               target="_blank" class="phone-link mobile-link">
              +51 995 439 092
            </a>
        
            <!-- Enlace para WhatsApp Web -->
            <a href="https://web.whatsapp.com/send?phone=51995439092&text=Hola%20quiero%20información%20sobre%20la%20carta"
               target="_blank" class="phone-link desktop-link">
              +51 995 439 092
            </a>
          </p>
        </div>
        
        
      </div>
    </div>
    <Map client:only="react" />
  
    <div class="instagram-section">
      <h3>Síguenos en Instagram</h3>
      <a href="https://www.instagram.com/maju_europostres" target="_blank" class="instagram-box">
        <img src="/instagram-icon.svg" alt="Instagram" class="instagram-icon" />
        <p>@maju_europostres</p>
      </a>
    </div>
  </main>

  
</BaseLayout>


<style>
  .instagram-section {
    background: url("/instagram background.png") no-repeat center center/cover;
    position: relative;
    width: 100%;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #5e3023;
    font-family: "Waterfall", sans-serif;
    flex-direction: column;
  }

  .instagram-section h3 {
    font-size: 70px;
    font-weight: normal;
    margin-top: 0px;
    margin-bottom: 15px;
  }

  .instagram-box {
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 6px solid #5e3023;
    padding: 10px 20px;
    border-radius: 20px;
    margin-top: 10px;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.4);
    width: 304px;
    position: relative;
    overflow: hidden;
    transition: background 0.5s ease-in-out;
    cursor: pointer;
  }

  .instagram-box::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(217, 217, 217, 0.44);
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
    z-index: 0;
}

.instagram-box:hover::before {
    opacity: 1;
}

  .instagram-icon {
    width: 30px;
    height: 30px;
    margin-right: 10px;
  }

  .instagram-icon,
.instagram-box p {
    position: relative;
    z-index: 1;
}

  .instagram-box p {
    color: #5e3023;
    font-size: 25px;
    font-family: "Montserrat", sans-serif;
    font-weight: bold;
    position: relative;
  }

  h2 {
    color: #895737;
    font-family: "Waterfall", sans-serif;
    font-size: 90px;
    font-weight: normal;
    margin: 0;
  }

  p {
    color: #895737;
    font-family: "Montserrat", sans-serif;
    font-size: 30px;
    font-weight: bold;
  }

  .contact-info p {
    color: #000;
    font-family: "Montserrat", sans-serif;
    font-size: 20px;
    font-weight: normal;
    text-align: center;
    max-width: 220px;
  }

  .header-image {
    width: 100%;
    height: 600px;
    margin-bottom: -5px;
  }

  .contact-container {
    background: #f5e7da;
    padding: 40px 0;
    text-align: center;
  }

  .contact-info {
    margin: 4rem 0 1rem 0;
    display: flex;
    justify-content: center;
    gap: 6rem;
  }

  .contact-info div {
    text-align: center;
    max-width: 220px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .icon-circle {
    min-width: 60px;
    min-height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(137, 87, 55, 1);
    border-radius: 50%;
    box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
  }

  .icon {
    width: 30px;
    height: 30px;
    filter: brightness(0) invert(1);
    transform: scale(1.05);
  }

  .icon-circle:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
  }

  .location-text {
  text-decoration: none; 
  color: #000; 
  font-weight: normal; 
  transition: color 0.3s ease-in-out, text-decoration 0.3s ease-in-out; 
}

.location-text:hover {
  text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
}

.phone-link {
  text-decoration: none; 
  color: #000; 
  font-weight: normal;
  transition: color 0.3s ease-in-out, text-decoration 0.3s ease-in-out;
}

.phone-link:hover {
  text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
}

.mobile-link {
  display: none; 
}

.desktop-link {
  display: inline-block; 
}

  @media (max-width: 950px) {
    .contact-info {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 3rem;
      justify-content: center;
    }

    .contact-info div {
      max-width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .contact-info div:nth-child(3) {
      grid-column: span 2;
      justify-self: center;
    }
  }





/* Media query para celulares con ancho de 360px */
@media (max-width: 360px) {
  .instagram-section {
    height: 250px;
  }

  .instagram-section h3 {
    font-size: 60px;
  }

  .instagram-box {
    border: 3px solid #5e3023;
    padding: 6px 10px;
    width: 250px;
  }

  .instagram-icon {
    width: 20px;
    height: 20px;
  }

  .instagram-box p {
    font-size: 16px;
  }

  h2 {
    font-size: 80px;
  }

  p {
    font-size: 30px;
  }

  .contact-info p {
    font-size: 18px;
    max-width: 220px;
  }

  .header-image {
    width: 100%;
    height: 400px;
  }

  .contact-info {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 2rem;
  }

  .icon-circle {
    min-width: 55px;
    min-height: 55px;
  }

  .icon {
    width: 28px;
    height: 28px;
  }
}

/* Media query para pantallas medianas */
@media (min-width: 768px) {
  .instagram-section {
    height: 250px;
  }

  .instagram-section h3 {
    font-size: 70px;
  }

  .instagram-box {
    border: 4px solid #5e3023;
    padding: 8px 16px;
  }

  .instagram-icon {
    width: 25px;
    height: 25px;
  }

  .instagram-box p {
    font-size: 20px;
  }

  h2 {
    font-size: 80px;
  }

  p {
    font-size: 30px;
  }

  .contact-info p {
    font-size: 18px;
    max-width: 220px;
  }

  .header-image {
    width: 100%;
    height: 500px;
  }

  .contact-info {
    gap: 2rem;
  }

  .icon-circle {
    min-width: 55px;
    min-height: 55px;
  }

  .icon {
    width: 28px;
    height: 28px;
  }
}

/* Media query para pantallas grandes */
@media (min-width: 1024px) {
  .instagram-section {
    height: 250px;
  }

  .instagram-section h3 {
    font-size: 70px;
  }

  .instagram-box {
    border: 4px solid #5e3023;
    padding: 8px 16px;
  }

  .instagram-icon {
    width: 25px;
    height: 25px;
  }

  .instagram-box p {
    font-size: 20px;
  }

  h2 {
    font-size: 80px;
  }

  p {
    font-size: 30px;
  }

  .contact-info p {
    font-size: 18px;
    max-width: 220px;
  }

  .header-image {
    width: 100%;
    height: 500px;
  }

  .contact-info {
    gap: 7rem;
  }

  .icon-circle {
    min-width: 55px;
    min-height: 55px;
  }

  .icon {
    width: 28px;
    height: 28px;
  }
}

</style>
